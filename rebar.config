{erl_opts, [debug_info]}.

{deps, [
    {amqp_client, "3.12.1"},
    {jiffy, "1.1.1"},
    {epgsql, "4.7.1"}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [time_tracking]}
]}.

{relx, [
    {release, {time_tracking, "0.1.0"}, [
        time_tracking,
        sasl
    ]},
    {sys_config, "./config/sys.config"},
    {vm_args, "./config/vm.args"},
    {dev_mode, true},
    {include_erts, false},
    {extended_start_script, true}
]}.
